<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="moj.mojautos.controllers.SelectCarActivity"
    android:background="#eee">

    <TextView
        android:id="@+id/txt_select_car_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="autos_name"
        android:padding="@dimen/default_padding"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_select_car_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="autos_address"
        android:padding="@dimen/default_padding"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/select_car_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
